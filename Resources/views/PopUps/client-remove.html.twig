{% extends "MesClicsBundle:Popups:layout.html.twig" %}
{% block popupHeader %}
<h2>Attention !</h2>
{% endblock popupHeader %}

{% block popupContent %}
{% if client.isProspect %}
    {% set statut = "prospect" %}
{% else %}
    {% set statut = "client" %}
{% endif %}
<p class="oocss-instruction oocss-block oocss-full-container-width oocss-center-h">Êtes-vous sûr de vouloir supprimer le
    client "{{ client.nom }}" ?</p>
<div class="oocss-center-h">
    <a class="oocss-button oocss-discret" href="{{ path('mesclics_admin_client_delete', {'client_id': client.id}) }}">Oui</a>
    <button class="oocss-button oocss-discret oocss-close" data-target-class="popup">Annuler</button>
</div>
{% endblock popupContent %}