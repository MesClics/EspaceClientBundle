{% if widget.variables.isSlideshow is defined and widget.variables.isSlideshow %}
    <div class="oocss-slideshow">
        {{ form_start(form, {'attr': {'class': 'oocss-slideshow--content oocss-full-container-width'}}) }}
        {{ form_row(form.type, {'widget_attr': {'class': 'oocss-full-container-width'}, 'label': 'De quel type de projet s\'agit-il ?', 'attr': {'class': 'oocss-slideshow--step'}, 'help': 'ex: Website, Logo, Charte Graphique etc...'}) }}
        {{ form_row(form.nom, {'widget_attr': {'class': 'oocss-full-container-width'}, 'label': 'Donnez un nom au projet', 'attr': {'class': 'oocss-slideshow--step'}})
        }}
        {{ form_row(form.submit, {'attr': {'class': 'oocss-slideshow--step oocss-center-all'}, 'label': 'créer le nouveau projet'}) }}
        {{ form_row(form._token)}}
        {{ form_end(form, {'render_rest': false}) }}
        <div class="oocss-slideshow--slider"></div>
    </div>

{% else %}
    <div>
        {{ form_start(form) }}
        {{ form_row(form.type, {'attr': {'class': 'oocss-full-container-width'}, 'widget_attr': {'class': 'oocss-full-container-width'}, 'label': 'De quel type de projet s\'agit-il ?', 'help': 'par ex : web, design, conseil etc...'}) }}
        {{ form_row(form.nom, {'attr': {'class': 'oocss-full-container-width'}, 'widget_attr': {'class': 'oocss-full-container-width'}, 'label': 'Quel nom donner au projet ?'}) }}
        {% if projet.id is defined %}
        {{ form_row(form.isClosed, {'attr': {'invertLabel': true}, 'label': 'Clore le projet'}) }}
        {% endif %}
        {{ form_row(form.submit, {'label': 'créer le projet'}) }}
        {{ form_row(form._token) }}
        {{ form_end(form, {'render_rest': false}) }}
    </div>
{% endif %}