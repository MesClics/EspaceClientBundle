<section class="client-new oocss-widget highlight small">
    <div class="oocss-widget--head">
        <h2 class="oocss-widget--title">Ajouter un client</h2>
    </div>
    <div class="oocss-widget--content">
        {{ form_start(client_new_form, {'attr' : {'class': '[ oocss-slideshow ]'}}) }}
        {{ form_errors(client_new_form) }}

        <div class="oocss-slideshow--content">
            <div class="oocss-slideshow--step">
                {{ form_row(client_new_form.prospect, {'attr': {'class': 'oocss-form-radio-on-off'}}) }}
            </div>

            <div class="oocss-slideshow--step">
                {{ form_row(client_new_form.nom) }}
            </div>

            <div class="oocss-slideshow--step">
                {{ form_row(client_new_form.image) }}
            </div>

            <div class="oocss-slideshow--step">
               {{ form_row(client_new_form.ajouter, {'attr' : {'class': 'oocss-form-submit'}})  }}
            </div>
        </div>

       
        <div class="oocss-slideshow--slider">
        </div>

        {{ form_rest(client_new_form) }}
        {{ form_end(client_new_form)}}

    </div>
</section>