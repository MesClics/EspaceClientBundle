<div class="oocss-widget--head">
    <h2 class="[ oocss-title-section ]">Liste des clients</h2>
</div>

<div class="oocss-widget--content">
    <table class="[ oocss-table ]">
        <tr class="[ oocss-table-head-row ]">
            <th>logo</th>
            <th>numero</th>
            <th>nom</th>
            <th>alias</th>
            <th>derni√®re modification</th>
            <th>prospect</th>
        </tr>

        {% for item in clients %}
        <tr>
            <td class="[ oocss-table-data oocss-table-data__d__discret ]"><a class="[ oocss-table-link ]" href="{{ path('mesclics_admin_client', { 'client_id' : item.id }) }}">{% if item.image is defined and item.image is not null %}<img class="[ oocss-image__d__extra_small ]" src="{{ item.image.url }}" alt="{{ item.image.alt }}"/></a>{% endif %}</td>
            <td class="[ oocss-table-data ]"><a class="[ oocss-table-link ]" href="{{ path('mesclics_admin_client', { 'client_id' : item.id }) }}"></a>{{ item.numero }}</a></td>
            <td class="[ oocss-table-data ]"><a class="[ oocss-table-link ]" href="{{ path('mesclics_admin_client', { 'client_id' : item.id }) }}">{{ item.nom }}</a></td>
            <td class="[ oocss-table-data ]"><a class="[ oocss-table-link ]" href="{{ path('mesclics_admin_client', { 'client_id' : item.id }) }}">{{ item.alias }}</a></td>
            <td class="[ oocss-table-data ]"><a class="[ oocss-table-link ]" href="{{ path('mesclics_admin_client', { 'client_id' : item.id }) }}">{{ item.updatedAt|date('d/m/Y') }}</a></td>
            <td class="[ oocss-table-data ]"><a class="[ oocss-table-link ]" href="{{ path('mesclics_admin_client', { 'client_id' : item.id }) }}">{% if item.prospect %}&#10003;{% endif %}</a></td>
        
        </tr>
        {% endfor %}
    </table>
</div>