<section class="client-update oocss-widget medium highlight">
    <div class="oocss-widget--head">
        <h2 class="oocss-widget--title">{{ client.nom }} {% if client.prospect %} (PROSPECT) {% endif %}</h2>
    </div>
    <div class="oocss-widget--content">
        <div class="oocss-form-fieldset oocss-horizontal">
            <div class="oocss-row">
                <span class="oocss-label">Num√©ro client</span>
                <span>{{ client.numero }}</span>
            </div>
            {% if client.image %}
                <div class="oocss-form-row">
                    <img class="oocss-image oocss-m" src={{ client.image.url }} alt={{ client.image.alt }}
                        title={{ client.image.title|default(client.image.alt) }}>
                </div>
            {% endif %}
        </div>
        
        {% with {'isSlideshow': false } %}{% include "MesClicsEspaceClientBundle:Widgets:client-form.html.twig" %}{% endwith %}
    
        {% if client.trelloList %}
            <div class="oocss-row">
                <span class="oocss-label">Liens Trello</span> 
                <ul class="oocss-block oocss-horizontal">
                    <li>
                        <a class="oocss-button oocss-discret" href='https://trello.com/b/{{client.trelloList.idBoard}}/l/{{client.trelloList.id}}' target="_blank">infos</a>
                    </li>
                    <li>
                        <a class="oocss-button oocss-discret" href='https://trello.com/b/{{client.trelloList.idBoard}}/l/{{client.trelloList.id}}' target="_blank">chrono</a>
                    </li>
                </ul>
            </div>
        {% endif %}

        {% if client.website %}
            <div class="oocss-row">
                <span class="oocss-label">Website</span>
                <span><a class="oocss-button oocss-discret" href={{ client.website }} target="_blank">Voir le site</a></span>
            </div>
        {% endif %}
    
    </div>
</section>